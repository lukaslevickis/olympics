@model ViewsGeneralModel

<h3>Athletes</h3>

@using (Html.BeginForm("FilterBySports", "Athlete", FormMethod.Post))
{
    <div class="container-full" style="background-color:aliceblue">
        <div class="container">
            @Html.DropDownListFor(x => Model.FilterSort.FilterSport, Model.Sports[0].SportsFormSelect)
            <input type="submit" value="Filter" />
        </div>
    </div>
}

@using (Html.BeginForm("FilterByCountry", "Athlete", FormMethod.Post))
{
    <div class="container-full" style="background-color:aliceblue">
        <div class="container">
            @Html.DropDownListFor(x => Model.FilterSort.FilterCountry, Model.Countries[0].CountryFormSelect)
            <input type="submit" value="Filter" />
        </div>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Country</th>
            <th scope="col">Sports</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Athletes)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.CountryName</td>
                <td>
                    @foreach (var sports in item.Sports)
                    {
                        <ul>@sports</ul>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>