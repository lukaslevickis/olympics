@model List<AthleteModel>

<h3>Athletes</h3>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Country</th>
            <th scope="col">Sports</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.CountryName</td>
                <td>
                    @foreach (var sports in item.Sports)
                    {
                        <td>@sports</td>
                    }
                </td>
            </tr>
        }
        </tbody>
</table>